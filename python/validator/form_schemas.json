[
  {
    "name": "IRP",
    "allow_unknown": true,
    "cerberus_rules": {
      "form": {
        "type": "dict",
        "required": true,
        "schema": {
           "section-identification-information": {
             "type": "dict",
             "required": true
           },
           "section-request-for-review-oral-written": {
             "type": "dict",
             "required": true
           },
           "section-irp-information": {
             "type": "dict",
             "required": true,
             "schema": {
               "control-prohibition-number": {
                 "type": "string",
                 "required": true
               },
               "control-date-served": {
                 "type": "string",
                 "required": true
               },
               "licence-seized": {
                 "type": "string",
                 "required": true,
                 "nullable": true
               },
               "licence-lost-or-stolen": {
                 "type": "string",
                 "required": true,
                 "nullable": true
               },
               "licence-not-surrendered": {
                 "type": "string",
                 "required": true,
                 "nullable": true
               },
               "control-prohibition-type-length": {
                 "type": "string",
                 "required": true,
                 "allowed": [
                   "3-days-warn",
                   "7-days-warn",
                   "30-days-warn",
                   "90-days-fail",
                   "90-days-refusal"
                 ]
               }
             }
           }
        }
      }
    }
  }
]